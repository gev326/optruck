<h1>Listing Drivers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Address</th>
      <th>Desired city</th>
      <th>Desired state</th>
      <th>Desired zip</th>
      <th>Driver id tag</th>
      <th>Driver phone</th>
      <th>Driver truck type</th>
      <th>Active</th>
      <th>Driver status</th>
      <th>Driver contract number</th>
      <th>Driver availability</th>
      <th>Driver company</th>
      <th>Comments</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.first_name %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.latitude %></td>
        <td><%= driver.longitude %></td>
        <td><%= driver.address %></td>
        <td><%= driver.desired_city %></td>
        <td><%= driver.desired_state %></td>
        <td><%= driver.desired_zip %></td>
        <td><%= driver.driver_id_tag %></td>
        <td><%= driver.driver_phone %></td>
        <td><%= driver.driver_truck_type %></td>
        <td><%= driver.active %></td>
        <td><%= driver.driver_status %></td>
        <td><%= driver.driver_contract_number %></td>
        <td><%= driver.driver_availability %></td>
        <td><%= driver.driver_company %></td>
        <td><%= driver.comments %></td>
        <td><%= driver.active %></td>
        <td><%= link_to 'Show', driver %></td>
        <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
        <td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Driver', new_driver_path %>


<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @map_hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});</script>
