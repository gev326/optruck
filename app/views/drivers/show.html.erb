<div id='driver-show'>

  <h3> <%= @driver.full_name %> </h3>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>First name:</strong>
    <%= @driver.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= @driver.last_name %>
  </p>

  <p>
    <strong>Current Location:</strong>
    <%= @driver.current_city %>
  </p>
  <p>
    <strong>Current State:</strong>
    <%= @driver.current_state %>
  </p>

  <p>
    <strong>Desired city:</strong>
    <%= @driver.desired_city %>
  </p>

  <p>
    <strong>Desired state:</strong>
    <%= @driver.desired_state %>
  </p>

  <p>
    <strong>Desired zip:</strong>
    <%= @driver.desired_zip %>
  </p>

  <p>
    <strong>Driver id tag:</strong>
    <%= @driver.driver_id_tag %>
  </p>

  <p>
    <strong>Driver phone:</strong>
    <%= @driver.driver_phone %>
  </p>

  <p>
    <strong>Driver truck type:</strong>
    <%= @driver.driver_truck_type %>
  </p>

  <p>
    <strong>Active:</strong>
    <%= @driver.active %>
  </p>

  <p>
    <strong>Driver status:</strong>
    <%= @driver.driver_status %>
  </p>

  <p>
    <strong>Driver contract number:</strong>
    <%= @driver.driver_contract_number %>
  </p>

  <p>
    <strong>Driver availability:</strong>
    <%= @driver.driver_availability %>
  </p>

  <% if @driver.Covered %>
    <p>
      <strong>Covered by:</strong>
      <%= @driver.user.full_name %>
    </p>
  <% end %>

  <p>
    <strong>Driver company:</strong>
    <%= @driver.driver_company %>
  </p>

  <p>
    <strong>Comments:</strong>
    <%= @driver.comments %>
  </p>

  <%= link_to 'Edit', edit_driver_path(@driver), class: 'btn btn-success link-btn' %>
</div>
