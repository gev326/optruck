<!DOCTYPE html>
<html>
<head>
  <title>Optruckboard</title>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDT09gnN8Lxk1rZXaneZnvD1-fHaH0fVo4&sensor=FALSE" type="text/javascript"></script>
  <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if user_signed_in? %>

    <% account_type = current_user.account_type %>

    <header class="navbar navbar-light bg-faded">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-left">
            <li> <%=  link_to current_user.full_name, drivers_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            <li><%= link_to "Reports", drivers_reports_path %></li>
            <li><%= link_to "Drivers", drivers_path %></li>
            <% if account_type == 'admin' %>
              <li><%= link_to "Manage users", users_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

  <% end %>

  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
  <% end %>


<%= yield %>

</body>
</html>
